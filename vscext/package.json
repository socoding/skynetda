{
	"name": "skynet-debugger",
	"displayName": "Skynet Debug",
	"description": "A Lua debugger for skynet",
	"version": "2.0.0",
	"publisher": "socoding",
	"author": {
		"name": "socoding",
		"url": "https://github.com/socoding"
	},
	"license": "MIT",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/socoding/skynetda"
	},
	"bugs": {
		"url": "https://github.com/socoding/skynetda/issues"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"extensionKind": [
		"workspace"
	],
	"scripts": {},
	"main": "./extension.js",
	"activationEvents": [
		"onDebug"
	],
	"keywords": [
		"debug",
		"debugger",
		"lua",
		"skynet"
	],
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"eslint": "^6.6.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"contributes": {
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "lua",
				"label": "skynet debugger",
				"languages": [
					"lua"
				],
				"linux": {
					"program": "./bin/linux/skynetda"
				},
				"osx": {
					"program": "./bin/macosx/skynetda"
				},
				"windows": {
					"program": "./bin/windows/skynetda.exe"
				},
				"initialConfigurations": [
					{
						"name": "skynet debugger",
						"type": "lua",
						"request": "launch",
						"workdir": "${workspaceFolder}",
						"program": "./skynet",
						"config": "./examples/config_vsc",
						"service":  "./service"
					}
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"workdir": {
								"type": "string",
								"description": "Set the current working directory",
								"default": "${workspaceFolder}"
							},
							"program": {
								"type": "string",
								"description": "Set the path of skynet program, the path is relative to workdir",
								"default": "./skynet"
							},
							"config": {
								"type": "string",
								"description": "skynet config path",
								"default": "./examples/config_vsc"
							},
							"service": {
								"type": "string",
								"description": "Set the path of skynet service, the path is relative to workdir",
								"default": "./service"
							},
							"envFile": {
								"type": "string",
								"description": "user environment config file to load",
								"default": ""
							},
							"fileEnvPrefix": {
								"type": "string",
								"description": "user environment prefix for `envFile`",
								"default": ""
							},
							"envs": {
								"type": "array",
								"description": "user defined environments",
								"default": []
							}
						}
					}
				}
			}
		]
	}
}
